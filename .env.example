# Websocket endpoint for bundle events (defaults to prod)
GALA_BUNDLE_WS=wss://bundle-backend-prod1.defi.gala.com

# Wallet used to sign swaps
WALLET_PRIVATE_KEY=0xYOUR_PRIVATE_KEY
WALLET_ADDRESS=0xYOUR_WALLET_ADDRESS

# Buy sizing and swap config
BUY_AMOUNT=50
BASE_TOKEN=GALA|Unit|none|none
SLIPPAGE=0.98

# Optional retry/backoff tuning (ms)
RETRY_BASE_MS=250
RETRY_MAX_MS=6000
