# Websocket endpoint for bundle events (defaults to prod)
GALA_BUNDLE_WS=wss://bundle-backend-prod1.defi.gala.com

# Wallet used to sign launchpad buys
WALLET_PRIVATE_KEY=0xYOUR_PRIVATE_KEY

# Buy sizing and launchpad buy config
BUY_AMOUNT=99
SLIPPAGE=0.05
SKIP_QUOTE=false

# Retry/backoff while waiting for pool readiness
RETRY_BASE_MS=250
RETRY_MAX_MS=6000
RETRY_MAX_ATTEMPTS=5

# Verbose logging
# SNIPEBOT_DEBUG=true
